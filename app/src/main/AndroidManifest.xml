<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="oliveira.fabio.searchmovie">

    <uses-permission android:name="android.permission.INTERNET" />
    <application
        android:name="oliveira.fabio.searchmovie.base.SearchMovieApplication"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:networkSecurityConfig="@xml/network_security_policy"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        tools:ignore="GoogleAppIndexingWarning">
        <activity
            android:name="oliveira.fabio.searchmovie.feature.home.principal.presentation.activity.HomeActivity"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="oliveira.fabio.searchmovie.feature.moviedetails.presentation.activity.MovieDetailsActivity"
            android:screenOrientation="portrait" />
    </application>
</manifest>
